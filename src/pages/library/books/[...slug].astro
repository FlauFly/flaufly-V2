---
import { getCollection, render } from 'astro:content';
import MediaPostLayout from '../../../layouts/MediaPostLayout.astro';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('booksCollection');

  return posts.map((post, index) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

type Props = {
    post: CollectionEntry<'booksCollection'>;
}

const { post } = Astro.props;
const { Content } = await render(post);
---
<MediaPostLayout frontmatter={post.data}>
  <Content />
</MediaPostLayout>