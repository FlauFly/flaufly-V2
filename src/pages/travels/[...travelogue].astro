---
import { getCollection, render } from 'astro:content';
import TravelogueLayout from '../../layouts/TravelogueLayout.astro';
import type { CollectionEntry } from 'astro:content';
import type { MarkdownHeading } from 'astro';

export async function getStaticPaths() {
  const posts = (await getCollection('traveloguesCollection'))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  const headings = await Promise.all(
    posts.map(async (post) => {
        const data = await render(post);
        return data.headings;
    })
  );

  return posts.map((post, index) => ({
    params: { 
      travelogue: post.id,
      travelCode: post.data.travel, 
    }, 
    props: {
      post,
      prevPost: index < posts.length - 1 ? posts[index + 1] : null,
      nextPost: index > 0 ? posts[index - 1] : null, 
      headings: headings[index] },
  }));
}

type Props = {
    post: CollectionEntry<'traveloguesCollection'>;
    prevPost: CollectionEntry<'traveloguesCollection'>;
    nextPost: CollectionEntry<'traveloguesCollection'>;
    headings: MarkdownHeading[];
}

const { post, headings } = Astro.props;
const { Content } = await render(post);
---
<TravelogueLayout frontmatter={post.data} headings={headings}>
  <Content />
</TravelogueLayout>