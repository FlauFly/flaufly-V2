---
import DestinationLayout from '../../layouts/DestinationLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const destinations = await getCollection('destinations');

  return destinations.map(destination => ({
    params: { destination: destination.id }, 
    props: { destination },
  }));
}

const { destination } = Astro.props;
const { Content } = await render(destination);
---
<DestinationLayout destination={destination.data}>
  <Content />
</DestinationLayout>