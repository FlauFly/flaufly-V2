---
import { Icon } from "astro-icon/components";
const socials = [
  { name: "github", address: "https://github.com/FlauFly"},
  { name: "bluesky", address: "https://bsky.app/profile/flaufly.bsky.social"},
  { name: "mail", address: "mailto:tirhhe@gmail.com"},
]
---
<footer>
      <div>Â© 2024-2025 FlauFly</div>

      <!-- Social Media icons -->
      <div class="socials">
        {
          socials.map((item) => (
            <a class="social-icon" href={item.address}>
              <Icon name={item.name} size={32} />
            </a>
          ))
        }
      </div>
</footer>

<style>
  footer {
    background-color: var(--color-background);
    display: flex;
    justify-content: space-between;
  }

  div {
    padding: var(--spacing-base);
  }

  div.socials {
    display: flex;
    gap: var(--spacing-base);
  }

  .social-icon {
    color: var(--color-accent);
    transition: 0.3s ease-out;

    &:hover {
      color: var(--color-primary);
      scale: 1.2;
    }
  }

</style>