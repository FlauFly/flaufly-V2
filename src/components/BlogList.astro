---
import BlogPost from "./BlogPost.astro"
const { posts } = Astro.props
---
<ul class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4">
{
    posts.map((post: any) => (
    <BlogPost url={`/posts/${post.id}/`} title={post.data.title} description={post.data.description} pubDate={post.data.pubDate}/>
    ))
}
</ul>