<article class="prose-wrapper">
	<slot />
</article>

<style>
    .prose-wrapper {
		display: grid;
		grid-template-columns: 1fr min(80ch, 100%) 1fr;
		counter-reset: footnote-counter;
		font-size: var(--font-size-base);
	}

    .prose-wrapper > :global(*) {
		grid-column: 2;
	}

    .prose-wrapper > :global(p) {
        font-size: var(--font-size-base);
        margin-bottom: var(--space-m);
        line-height: var(--leading-base);
    }

    @media (max-width: 767px) {
        .prose-wrapper > :global(p) {
            line-height: var(--leading-loose);
        }
    }

    .prose-wrapper > :global(h2) {
        margin: var(--space-s) 0 var(--space-m)
    }

    .prose-wrapper :global(a.data-footnote-backref) {
        color: var(--color-accent);
        transition: 0.3s ease-out;
        &:hover {
            color: var(--color-primary);
        }
    }

    .prose-wrapper :global(sup > a) {
        &:hover::after {
            transform: scaleX(0);
        }
    }

    .prose-wrapper :global(ul) {
        list-style: square;
        padding-left: var(--space-l);
        margin-bottom: var(--space-s);
    }

    .prose-wrapper :global(ul > li) {
        margin-bottom: var(--space-xs);
        line-height: var(--leading-snug);
        &::marker {
            color: var(--color-primary);
        }
    }
</style>