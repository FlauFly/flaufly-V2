---
const { section } = Astro.props;
---
<section>
    <h2>{section}</h2>
    <div class="noise"></div>
</section>

<style>
    section {
    position: relative;
    width: 100vw;
    max-width: 100vw;
    margin-left: calc(-50vw + 50%);
    height: var(--space-2xl);
    margin-block: var(--space-l);
    }

    .noise {
    isolation: isolate;
    position: relative;
    width: 100%;
    height: 100%;
    height: 100%;
    background: linear-gradient(20deg, var(--color-primary), rgba(194,29,172,0.5)), url(../assets/noise.svg);   
    filter: contrast(600%) brightness(100%);
    }

    @media all and (-webkit-min-device-pixel-ratio:0) and (min-resolution: .001dpcm) {
        .noise {
            filter: contrast(600%) brightness(100%);
        }
    }

    h2 {
    width: 100%;
    max-width: 80rem;
    height: 0%;
    margin-inline: auto;
    padding-inline: var(--space-m);
    font-weight: 700;
    position: relative;
    z-index: 100;
    }
</style>