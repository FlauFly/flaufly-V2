---
const { section } = Astro.props;
---
<section>
    <h2>{section}</h2>
    <div class="noise"></div>
</section>

<style>
    section {
    position: relative;
    width: 100vw;
    max-width: 100vw;
    margin-left: calc(-50vw + 50%);
    height: var(--space-2xl);
    margin-bottom: var(--space-2xl);
    }

    .noise {
    isolation: isolate;
    position: relative;
    width: 100%;
    height: 100%;
    height: 100%;
    background: linear-gradient(20deg, var(--color-primary), rgba(194,29,172,0.5)), url(../assets/noise.svg);   
    filter: contrast(300%) brightness(100%);
    }

    h2 {
    width: 100%;
    max-width: 80rem;
    margin-inline: auto;
    padding-inline: var(--space-m);
    font-weight: 700;
    position: relative;
    z-index: 100;
    top: var(--space-xl);
    }
</style>