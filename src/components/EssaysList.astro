---
import EssayCard from "./EssayCard.astro"
const { posts } = Astro.props
---
<div class="essays-list grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 bg-secondary/25 rounded-md">
{
    posts.map((post: any) => (
    <EssayCard url={`/posts/${post.id}/`} title={post.data.title} description={post.data.description} startDate={post.data.startDate} topics={post.data.topics} />
    ))
}
</div>

<style>
    .essays-list {
        border-radius: var(--border-radius-base);
        display: grid;

        @media screen and (width >= 640px) {
            grid-template-columns: repeat(2, 1fr);
        }

        @media screen and (width >= 768px) {
            grid-template-columns: repeat(3, 1fr);
        }

        @media screen and (width >= 1024px) {
            grid-template-columns: repeat(4, 1fr);
        }
    }

</style>